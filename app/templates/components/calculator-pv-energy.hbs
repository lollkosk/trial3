<div class="container">
  <table class="table-full">

    <thead>
      <tr>
        <th colspan="5">Photovoltaic Calculator</th>
      </tr>
      <tr>
        <th>Peak Power, kWp</th>
        <th>Orientation</th>
        <th>Elevation</th>
        <th>Overshading</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      {{#if photovoltaics}}
        {{#each photovoltaics as |photovoltaic|}}
          <tr>
            <td class="text-right">{{number-formatter photovoltaic.peakPower 3}}</td>
            <td class="text-right">{{orientation-formatter photovoltaic.orientation}}</td>
            <td class="text-right">{{elevation-formatter photovoltaic.elevation}}</td>
            <td class="text-right">{{overshading-formatter photovoltaic.overshading}}</td>
            <td class="text-center"><button {{action "deletePhotovoltaic" photovoltaic}}>Delete</button></td>
          </tr>
        {{/each}}
      {{else}}
        <tr><td colspan="5">Your photovoltaics list is empty. Add some first.</td></tr>
      {{/if}}
    </tbody>

    <tfoot>
      <tr>
        <td colspan="4">Energy Generated by PVs:</td>
        <td class="text-left">{{number-formatter energy 3}}&nbsp;kWh</td>
      </tr>
    </tfoot>
  </table>
</div>
